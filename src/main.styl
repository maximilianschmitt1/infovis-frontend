@import '../node_modules/normalize.css/normalize.css'
@import '../node_modules/rc-menu/assets/index.css'
@import 'styles/variables'
@import 'styles/dashboard'
@import 'styles/explore'
@import 'styles/date-range-picker'

.rc-menu
  max-height 10rem
  overflow-y auto
  overflow-x overflow

*
  margin 0
  padding 0
  box-sizing border-box

html
  font-size 20px

body
  text-align center
  font-family 'Helvetica Neue', Helvetica, sans-serif, Arial
  font-weight 400
  color text-color
  padding-bottom 4rem

.app-header
  display flex
  justify-content space-between
  align-items center
  padding 1.5rem 2rem

  nav a
    margin-right 1.5rem
    padding .25rem 0
    text-decoration none
  nav a:hover, nav a.active
    border-bottom 3px solid link-color
  nav a:last-child
    margin-right 0

  h1
    margin 0
    font-size 1.2rem

    a
      color inherit
      text-decoration none
a
  color link-color

.app-body
  padding 0 2rem
  text-align left

h1, h2, h3, h4, h5, h6
  font-weight normal

.constrain-width
  margin 0 auto
  max-width 50rem
