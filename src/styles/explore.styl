.explore
  header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 2rem
    h1
      margin 0
      padding 0
  canvas
    width 100% !important
    height 20rem !important

  .date-range
    margin-top 2rem
    text-align right
    input:first-child
      margin-right 1rem

  .chart-container
    position relative
    height 20rem

  .loading-indicator
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 100
    background rgba(255, 255, 255, .5)
    display flex
    justify-content center
    &:before
      align-self center
      content url('/loading-indicator.gif')
      opacity .6

  .data-dimensions
    margin 2rem 0
    display flex
    justify-content flex-start

    .data-dimension-container
      margin-right 1rem
      display inline-flex
      font-size .8rem
      line-height 1.6
      &:before
        content ''
        border-radius 50%
        display block
        width 1rem
        height 1rem
        margin-right .5rem
      &:nth-child(1):before
        background colors-dimension1
      &:nth-child(2):before
        background colors-dimension2
      &:nth-child(3):before
        background colors-dimension3
      &:last-child
        margin-right 0

    .data-dimension-select-container
      display flex
      justify-content space-between
      select
        font-size 1rem

    .data-dimension-stats
      margin-top .25rem
      color #999
      strong
        font-weight normal
        color black

    .data-dimension-filter
      margin-top .5rem
      label
        margin-right 1rem
      label:last-child
        margin-right 0
